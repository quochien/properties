<h1>Lots</h1>

<table class="table table-strip" id="lots-table" style="width: 100%;">
  <thead>
    <tr>
      <th>#</th>
      <th>Description</th>
      <th>Terrase</th>
      <th>Parking</th>
      <th>City</th>
      <th>Expected Delivery</th>
      <th>Expected Actability</th>
      <th>Price</th>
      <th>Notary Fee</th>
      <th>Security Deposit</th>
      <th>Images</th>
    </tr>
  </thead>
  <tbody>
    <%= render @lots %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function() {
    $('#lots-table').dataTable({
      sPaginationType: 'full_numbers',
      lengthMenu: [[15, 25, 50, 100, 200], [15, 25, 50, 100, 200]]
    });
  });
</script>
